<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    android:layout_height="match_parent">
   <LinearLayout
       android:background="@color/colorAccent"
       android:visibility="visible"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="40dp">

      <LinearLayout
          android:id="@+id/navigation_btn_layout"
          android:orientation="horizontal"

          android:layout_width="match_parent"
          android:layout_marginRight="0dp"
          android:layout_height="match_parent">

         <ImageView
             android:id="@+id/imagebackbutt"
             android:layout_width="0dp"
             android:layout_height="30dp"
             android:gravity="center"
             android:layout_weight="0.15"
             android:background="#00ffffff"
android:layout_gravity="center"
             android:scaleType="fitCenter"
             android:src="@drawable/navbackbutton"
             android:tint="@color/textbackground" />

         <TextView
             android:textColor="@color/textbackground"

             android:id="@+id/titlenavi"
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:layout_weight="1"

             android:text="Job Applied Profiles"
             android:textAlignment="center"
             android:textSize="18sp"
             android:textStyle="bold" />

         <ImageView
             android:id="@+id/shareView"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:background="#00ffffff"
             android:layout_weight="0.15"
             android:scaleType="fitCenter"


             />


      </LinearLayout>


   </LinearLayout>

   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:id="@+id/recyclerjob"
       android:layout_height="wrap_content"/>

   <TextView
       android:layout_width="match_parent"
       android:visibility="gone"
       android:layout_gravity="center"
       android:gravity="center"
       android:textAlignment="center"
       android:id="@+id/visi"
       android:text="No one is applied"
       android:layout_height="match_parent" />

</LinearLayout>
