<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollvisib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_marginLeft="25dp"

                    android:id="@+id/userti"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="title"
                    android:paddingStart="15dp" />

                <EditText
                    android:layout_marginLeft="25dp"

                    android:id="@+id/udescp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Description"
                    android:paddingStart="15dp"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_marginLeft="25dp"

                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/uctc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:hint="$/Hour"

                        android:inputType="number"
                        android:paddingStart="15dp"
                        android:textSize="14sp" />



                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinner_search"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:hint="Location"
                        android:paddingStart="15dp"
                        android:textSize="14sp"

                        android:textColor="@color/textbackground" />
                    <EditText

                        android:id="@+id/ulocation"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:hint="Location"
                        android:paddingStart="15dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/startdate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:inputType="date"
                        android:lineSpacingExtra="10sp"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:text="Start Date"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:typeface="normal" />

                    <Button

                        android:id="@+id/enddate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:inputType="date"
                        android:lineSpacingExtra="10sp"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:text="End Date"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:typeface="normal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <Button


                        android:id="@+id/jistarttime"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:inputType="date"
                        android:lineSpacingExtra="10sp"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:text="Start Time"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:typeface="normal" />

                    <Button
                        android:id="@+id/jiendtime"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:inputType="date"
                        android:lineSpacingExtra="10sp"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:text="End Time"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:typeface="normal" />


                </LinearLayout>

                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"

                    android:text="Select days for free" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight=".90"
                        android:gravity="center"
                        android:text="All days"
                        android:textAlignment="textStart" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/jialldays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:checked="false"
                        android:gravity="center"
                        android:text=""
                        android:textAlignment="center" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text=""
                        />

                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="  AM"
                        android:textAlignment="textStart" />

                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="  PM"
                        android:textAlignment="textStart" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="Sunday"
                        android:textAlignment="textStart" />

                    <CheckBox

                        android:id="@+id/jisundayam"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:checked="false"
                        android:gravity="center" />

                    <CheckBox

                        android:id="@+id/jisundaypm"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:checked="false"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="Monday"
                        android:textAlignment="textStart" />

                    <CheckBox

                        android:id="@+id/jimondayam"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:checked="false"
                        android:gravity="center" />

                    <CheckBox

                        android:id="@+id/jimondaypm"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:checked="false"
                        android:gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="Tuesday"
                        android:textAlignment="textStart" />

                    <CheckBox

                        android:id="@+id/jituesdayam"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:checked="false"
                        android:gravity="center"
                        android:text="" />

                    <CheckBox

                        android:id="@+id/jituesdaypm"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:checked="false"
                        android:gravity="center"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="Wednesday"
                        android:textAlignment="textStart" />

                    <CheckBox

                        android:id="@+id/jiwedam"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:checked="false"
                        android:gravity="center"
                        android:text="" />

                    <CheckBox

                        android:id="@+id/jiwedpm"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="Thursday"
                        android:textAlignment="textStart" />

                    <CheckBox

                        android:id="@+id/jithursam"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:checked="false"
                        android:gravity="center"
                        android:text="" />

                    <CheckBox

                        android:id="@+id/jithurpm"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:checked="false"
                        android:gravity="center"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="Friday"
                        android:textAlignment="textStart" />

                    <CheckBox

                        android:id="@+id/jifriam"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:checked="false"
                        android:gravity="center"
                        android:text="" />

                    <CheckBox

                        android:id="@+id/jifripm"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="Saturday"
                        android:textAlignment="textStart" />

                    <CheckBox

                        android:id="@+id/jisatam"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="" />

                    <CheckBox

                        android:id="@+id/jisatupm"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="" />

                </LinearLayout>


            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="25dp"
                    android:layout_height="40dp">

                    <EditText

                        android:id="@+id/jocontact"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:hint="Contact"
                        android:inputType="number"

                        android:textSize="14sp" />

                    <Button
                        android:textColor="@color/textbackground"

                        android:id="@+id/uapplyjob"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Upload"
                        android:textAllCaps="false" />

                </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:textSize="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </ScrollView>
<TextView
android:layout_marginTop="100dp"
android:layout_width="match_parent"
android:text="Under Developement"
android:visibility="gone"
android:id="@+id/deveope"
android:textSize="25sp"
android:layout_gravity="center"
android:gravity="center"
android:textAlignment="center"
android:layout_height="wrap_content" />



    </LinearLayout>
